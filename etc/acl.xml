<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::system">
                    <resource id="Qoliber_TridentCache::trident" title="Trident Cache" sortOrder="100">
                        <resource id="Qoliber_TridentCache::stats" title="View Cache Statistics" sortOrder="10"/>
                        <resource id="Qoliber_TridentCache::purge" title="Purge Cache" sortOrder="20"/>
                    </resource>
                </resource>
                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="Qoliber_TridentCache::config" title="Trident Cache Configuration" sortOrder="100"/>
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
